<h1> Auth0 Test App </h2>
<div id="root" style="width: 320px; margin: 40px auto; padding: 10px; border-style: dashed; border-width: 1px;">
    embeded area
</div>
<script src="https://cdn.auth0.com/w2/auth0-widget-5.0.min.js"></script>
<script>

  var widget = new Auth0Widget({
    domain:         '<%= ENV["AUTH0_DOMAIN"] %>',
    clientID:       '<%= ENV["AUTH0_CLIENT_ID"] %>',
    callbackURL:    '<%= ENV["AUTH0_CALLBACK_URL"] %>'
  });


  widget.signin({ container: 'root', chrome: true, scope: 'openid profile' });
</script>

<% if @user.present? %>
  <div class="well clearfix">
    <h2>UID</h2>
    Hello <%= @user["info"]["name"] %>
  </div>
  <br>
  <pre>
    <%= JSON.pretty_generate(@user.to_hash) %>
  </pre>
<% end %>
